<style>
    .video_area{
        margin-top: 35px;
        width: 100%;
        height: auto;
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
    }
    .video_box{
        width: 1000px;
        min-width: 1000px;
        height: auto;
        min-height: 300px;
        display: flex;
    }
    .video_box_left{
        width: 700px;
        min-width: 700px;
        height: auto;
        min-height: 300px;
        border-top: 0px;
    }
    .video_box_right{
        width: 300px;
        min-width: 300px;
        height: auto;
        min-height: 1800px;
        border: 1px solid chartreuse;
        border-left: none;
    }
    .video_content_box{
        width: 700px;
        height: 395px;
    }
    .video_content_info_box{
        width: 644px;
        height: auto;
        min-height: 100px;
        margin-right: 40px;
        padding-left: 8px;
        padding-right: 8px;
        padding-top: 24px;
        padding-bottom: 26px;
        border-bottom: 0.8px solid #E8E8E8;
    }
    .video_content_info_title{
        width: 100%;
        height: 16px;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-end;
    }
    .video_content_info_title_league{
        color: black;
        font-weight: bold;
        font-size: 14px;
    }
    .video_content_info_title_team{
        color: #767676;
        font-weight: bold;
        font-size: 14px;
    }
    .video_content_info_title_date{
        color: #6d6d6d;
        font-size: 14px;
        font-weight: 500;
    }
    .video_content_info_title_title{
        margin: 0px;
        font-size: 25px;
        margin-bottom: 20px;
    }
    .video_content_info_title_left_box{
        width: 50%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: flex-start;
        align-items: flex-end;
    }
    .video_content_info_title_right_box{
        width: 50%;
        height: 100%;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: flex-end;
    }
    .video_content_info_title_addition{
        width: 100%;
        height: 35px;
        display: flex;
        flex-direction: row;
        justify-content: flex-end;
        align-items: flex-end;
        font-size: 30px;
        margin-bottom: 30px;
    }
    .video_content_info_title_left_content_box{
        width: 100%;
        height: auto;
        min-height: 300px;
        border-top: 1px solid #E8E8E8;
        padding-top: 20px;
        white-space: pre-line;
        font-size: 20px;
    }
</style>
<div class="video_area">
    <div class="video_box">
        <div class="video_box_left">
            <div class="video_content_box">
                <iframe width="700" height="395" src="<%=row[0].video%>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
            </div>
            <div class="video_content_info_box">
                <div class="video_content_info_title">
                    <span class="video_content_info_title_league"><%=row[0].league%> | &nbsp;</span>
                    <span class="video_content_info_title_team"><%=row[0].team%> &nbsp;</span>
                    <span class="video_content_info_title_date"><%=row[0].upload_time%> &nbsp;</span>
                </div>
                <h1 class="video_content_info_title_title"><%=row[0].title%></h1>
                <div class="video_content_info_title_addition">
                    <div class="video_content_info_title_left_box">
                        â–· <%=row[0].hit%>
                    </div>
                    <div class="video_content_info_title_right_box">
                    </div>
                </div>
                <div class="video_content_info_title_left_content_box">
                    <%=row[0].content%>
                </div>
            </div>
        </div>
        <div class="video_box_right">

        </div>
    </div>
</div>